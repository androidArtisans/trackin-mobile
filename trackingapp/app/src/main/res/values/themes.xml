<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trackingapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
    </style>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/ropa_sans</item>
    </style>
    <style name="BottomNavigation">
        <item name="android:background">@color/app_secondary</item>
        <item name="itemBackground">@color/app_secondary</item>
        <item name="itemIconTint">@color/app_primary</item>
        <item name="itemTextColor">@color/app_primary</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
    </style>
    <style name="ButtonTrack">
        <item name="android:backgroundTint">@color/app_primary</item>
        <item name="android:tint">@color/app_white</item>
        <item name="fontFamily">@font/titillium_web</item>
    </style>
    <style name="HeaderText">
        <item name="fontFamily">@font/titillium_web</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/bg_header</item>

    </style>
    <style name="HeaderTextSecondary">
        <item name="fontFamily">@font/titillium_web</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/bg_header_secondary</item>

    </style>
<!-- NOTIFICATIONS -->
    <style name="LabelNotification">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/app_default</item>
    </style>
    <style name="CodeNotification">
        <item name="fontFamily">@font/titillium_web</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>



</resources>